---
const { title, titlePrefix = "Nils SÃ¶derman", small = true } = Astro.props;
import Header from "../components/Header.astro";

import favicon from "/favicon.ico";

const fullTitle = [titlePrefix, title].filter(Boolean).join(" - ");
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link href={favicon} rel="icon" type="image/x-icon" />
		<meta name="generator" content={Astro.generator} />
		<title>{fullTitle}</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Dosis:wght@350&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Header />
		<div class={small ? "small" : ""}>
			<slot />
		</div>
	</body>
</html>

<style is:global>
	html,
	body {
		background-color: #e3e3e3;

		margin: 0 auto;
		height: 100%;
		width: 90%;
		max-width: 1300px;

		font-family:
			-apple-system,
			BlinkMacSystemFont,
			Segoe UI,
			Helvetica,
			Arial,
			sans-serif,
			Apple Color Emoji,
			Segoe UI Emoji,
			Segoe UI Symbol;
	}

	a {
		color: #2f52b4;
		text-decoration: none;
		transition: color 0.06s;
	}

	a:hover {
		color: #6380cf;
		text-decoration: underline;
	}

	a:active {
		color: #859fe6;
	}

	img {
		user-select: none;
	}

	.small {
		max-width: 854px;
		margin: 0 auto;
	}
</style>
