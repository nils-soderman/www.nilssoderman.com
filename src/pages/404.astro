---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div id="error">
		<h1>404</h1>
		<p>Sorry, the page you are looking for does not exist.</p>
	</div>
</Layout>

<style>
	/* Page Content */
	@import url("https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap");

	#error {
		text-align: center;
		margin-top: 5rem;
		font-family: "Press Start 2P", serif;
		font-weight: 400;
		font-style: normal;
	}

	h1 {
		font-size: 6rem;
		margin-bottom: 1rem;
		margin-top: 100px;
	}

	p {
		font-size: 1.25rem;
		line-height: 2rem;
	}
</style>
